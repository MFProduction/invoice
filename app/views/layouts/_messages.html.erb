

<div class="row">
	<div class="col-md-12">
		<% flash.each do |message_type, message| %>
      <% if message_type == "alert" %>
        <% message_type = "danger" %>
      <% else %>
        <% message_type = "success" %>
      <% end %>
			<div class="alert alert-<%= message_type%>  fade in"><%= message %>
				<a href="#"class="close" data-dismiss="alert">&#215;</a>
			</div>
		<% end %>
	</div>	
</div>
