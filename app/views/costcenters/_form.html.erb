<%= render "shared/errors", obj: @costcenter %>
<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @costcenter do |f| %>
    <%= f.label :name  %>
    <%= f.text_field :name  %>
    <%= f.label :number  %>
    <%= f.text_field :number  %>
    <%= f.submit(@costcenter.new_record? ? "Create" : "Edit", class:"btn btn-success")  %>
    <% end  %>
  </div>
</div>
